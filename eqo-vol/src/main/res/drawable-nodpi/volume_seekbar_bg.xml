<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center">
        <shape>
            <corners android:radius="12dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/volume_seekbar_bg_color"
                android:endColor="@color/volume_seekbar_bg_color"
                android:startColor="@color/volume_seekbar_bg_color"
                android:type="linear" />

            <size android:height="@dimen/volume_seekbar_thickness" />

        </shape>
    </item>
</layer-list>
