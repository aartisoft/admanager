<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/admob_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mopub_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/admob_container" />

    <com.admanager.custombanner.view.CustomBanner
        android:id="@+id/custom_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mopub_container"
        app:remoteConfigEnableKey="custom_banner_enabled"
        app:remoteConfigImageUrlKey="custom_banner_image_url"
        app:remoteConfigTargetUrlKey="custom_banner_click_url" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="Page Content"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/custom_banner_with_loader"
        app:layout_constraintTop_toBottomOf="@id/custom_banner" />

    <LinearLayout
        android:id="@+id/custom_banner_with_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/inmobi_container" />

    <LinearLayout
        android:id="@+id/inmobi_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/facebook_container" />

    <LinearLayout
        android:id="@+id/facebook_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>

