<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.admanager.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.Splash1Activity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.Splash2Activity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".activity.MainIntersActivity"
            android:label="@string/ex_inters" />
        <activity
            android:name=".activity.Facebook6SecsActivity"
            android:label="@string/ex_face_6_sec" />
        <activity
            android:name=".activity.BannerDemoActivity"
            android:label="@string/ex_banner_demo" />
        <activity
            android:name=".activity.RecyclerViewAdmobDefaultActivity"
            android:label="@string/ex_recycler_view_admob_default" />
        <activity
            android:name=".activity.RecyclerViewDefaultActivity"
            android:label="@string/ex_recycler_view_default" />
        <activity
            android:name=".activity.RecyclerViewDensityActivity"
            android:label="@string/ex_recycler_view_density" />
        <activity
            android:name=".activity.RecyclerViewGridActivity"
            android:label="@string/ex_recycler_view_grid" />
        <activity
            android:name=".activity.RecyclerViewBigNativeActivity"
            android:label="@string/ex_recycler_view_bignative" />
        <activity
            android:name=".activity.RecyclerViewCustomDesignActivity"
            android:label="@string/ex_recycler_view_custom_design" />
        <activity
            android:name=".activity.RecyclerViewCustomActivity"
            android:label="@string/ex_recycler_view_custom" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"
            tools:replace="android:value" />

    </application>

</manifest>