<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WeatherActivity">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/loadingWeather"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/dailyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@color/colorBlackTR"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weatherIcon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/weatherDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:text="Tue, 21 Feb 2020" />

                    <TextView
                        android:id="@+id/weatherStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:padding="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:text="Clear" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/windText"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorBlackTR"
                    android:drawableTop="@drawable/ic_wind"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    tools:text="5 km/h" />

                <TextView
                    android:id="@+id/humidityext"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorBlackTR"
                    android:drawableTop="@drawable/ic_humidity"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    tools:text="25.54" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pressureText"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorBlackTR"
                    android:drawableTop="@drawable/ic_pressure"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    tools:text="24.28 IN" />


                <TextView
                    android:id="@+id/tempTxt"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@color/colorBlackTR"
                    android:drawableTop="@drawable/ic_moisture"
                    android:gravity="center"
                    android:maxLength="5"
                    android:padding="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    tools:text="18" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerForecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_forecast" />

                <ImageView
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:rotation="180"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                    tools:visibility="visible" />
            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>